<Application x:Class="Tema2MVP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Tema2MVP"
             xmlns:viewmodels="clr-namespace:Tema2MVP.Viewmodels"
             xmlns:views="clr-namespace:Tema2MVP.Views"
             StartupUri="Views/MenuView.xaml">
    <Application.Resources>


        <DataTemplate DataType="{x:Type viewmodels:MenuViewModel}">
            <views:MenuView></views:MenuView>
        </DataTemplate>
        <DataTemplate  DataType="{x:Type viewmodels:GameViewModel}">
            <views:GameView></views:GameView>
        </DataTemplate>
        <DataTemplate  DataType="{x:Type viewmodels:AboutViewModel}">
            <views:AboutView></views:AboutView>
        </DataTemplate>
        <DataTemplate  DataType="{x:Type viewmodels:HelpViewModel}">
            <views:HelpView></views:HelpView>
        </DataTemplate>
        <DataTemplate  DataType="{x:Type viewmodels:StatisticsViewModel}">
            <views:StatisticsView></views:StatisticsView>
        </DataTemplate>


    </Application.Resources>
</Application>
